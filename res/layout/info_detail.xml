<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content">
<TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"  
    android:text="趣味党史" 
    android:textSize="18dip"
    android:id="@+id/title"
    />
<LinearLayout android:id="@+id/LinearLayout02" 
              android:orientation="horizontal" 
              android:layout_marginTop="6dip"
              android:layout_width="wrap_content" 
              android:layout_height="wrap_content">
              <TextView android:text="栏目：学生团建" 
                        android:id="@+id/TextView_infotype" 
                        android:layout_marginLeft="10dip"
                        android:layout_width="wrap_content" 
                        android:layout_height="wrap_content">
                        </TextView>
              <TextView android:text="发布日期：2010年11月29日" 
                        android:id="@+id/TextView_deliverdate" 
                        android:layout_marginLeft="10dip"
                        android:layout_width="wrap_content" 
                        android:layout_height="wrap_content">
                        </TextView>
</LinearLayout>
<ScrollView android:id="@+id/ScrollView01" 
            android:layout_marginTop="6dip"
            android:layout_weight="1"
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content">
            <LinearLayout android:id="@+id/LinearLayout01" 
                          android:orientation="vertical"
                          android:layout_width="wrap_content" 
                          android:layout_height="wrap_content">
                          <ImageView android:id="@+id/ImageView_infoimage" 
                                     android:src="@drawable/icon"
                                     android:layout_width="fill_parent" 
                                     android:layout_height="wrap_content">
                          </ImageView>
                           <TextView android:text="@+id/TextView01" 
                                     android:id="@+id/TextView_infodetail" 
                                     android:layout_width="fill_parent" 
                                     android:layout_height="wrap_content">
                           </TextView>
           </LinearLayout>
</ScrollView>
<Button android:text="设置提醒" 
        android:id="@+id/Button_setremind" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content">
        </Button>
</LinearLayout>
